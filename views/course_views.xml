<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Course Form View -->
    <record id="view_course_form" model="ir.ui.view">
        <field name="name">student.management.course.form</field>
        <field name="model">student.management.course</field>
        <field name="arch" type="xml">
            <form string="Course">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="credit"/>
                        <field name="student_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Course List View -->
    <record id="view_course_list" model="ir.ui.view">
        <field name="name">student.management.course.list</field>
        <field name="model">student.management.course</field>
        <field name="arch" type="xml">
            <list string="Courses">
                <field name="name"/>
                <field name="code"/>
                <field name="credit"/>
            </list>
        </field>
    </record>

    <!-- Course Search View -->
    <record id="view_course_search" model="ir.ui.view">
        <field name="name">student.management.course.search</field>
        <field name="model">student.management.course</field>
        <field name="arch" type="xml">
            <search string="Courses">
                <field name="name"/>
                <field name="code"/>
                <field name="student_ids"/>
            </search>
        </field>
    </record>

    <!-- Course Action -->
    <record id="action_course" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">student.management.course</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Course Menu -->
    <menuitem id="menu_courses" name="Courses" parent="menu_student_root" action="action_course" sequence="20"/>
</odoo>
