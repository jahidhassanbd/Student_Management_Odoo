<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Students by Course List View -->
    <record id="view_course_student_tree" model="ir.ui.view">
        <field name="name">course.student.list</field>
        <field name="model">student.management.course</field>
        <field name="arch" type="xml">
            <list string="Students Enrolled in Course">
                <field name="name"/>
                <field name="student_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_course_student_report" model="ir.actions.act_window">
        <field name="name">Students by Course</field>
        <field name="res_model">student.management.course</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_students_by_course" 
              name="Students by Course" 
              parent="menu_student_root" 
              action="action_course_student_report" 
              sequence="40"/>
</odoo>
