<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Student Form View -->
    <record id="view_student_form" model="ir.ui.view">
        <field name="name">student.management.student.form</field>
        <field name="model">student.management.student</field>
        <field name="arch" type="xml">
            <form string="Student">
                <header>
                    <button name="action_show_courses" type="object"
                            string="Show Enrolled Courses" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="roll_no"/>
                        <field name="department"/>
                        <field name="course_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Student List View -->
    <record id="view_student_list" model="ir.ui.view">
        <field name="name">student.management.student.list</field>
        <field name="model">student.management.student</field>
        <field name="arch" type="xml">
            <list string="Students">
                <field name="name"/>
                <field name="email"/>
                <field name="roll_no"/>
                <field name="department"/>
            </list>
        </field>
    </record>

    <!-- Student Search View -->
    <record id="view_student_search" model="ir.ui.view">
        <field name="name">student.management.student.search</field>
        <field name="model">student.management.student</field>
        <field name="arch" type="xml">
            <search string="Students">
                <field name="name"/>
                <field name="roll_no"/>
                <field name="department"/>
                <field name="course_ids"/>
            </search>
        </field>
    </record>

    <!-- Student Actions -->
    <record id="action_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">student.management.student</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_student_root" name="Student Management" sequence="10"/>
    <menuitem id="menu_students" name="Students" parent="menu_student_root" action="action_student" sequence="10"/>
</odoo>
